@model IEnumerable<Domain.DTO.TaskDTO>
@{
    ViewData["Title"] = "Home Page";
}

<body>
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Registration", "Reg")'">Registration</button>
    <br />
</body>

<div class="container p-0">
    <div class="row p-0">

        <div class="col-6">
            <h2 class="text-primary">Tasks list</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="UserTask" asp-action="Create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Task name
                    </th>
                    <th>
                        Employer name
                    </th>
                    <th>
                        Date-time of starting
                    </th>
                    <th>
                        Predicting date-time of ending
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.name</td>
                        <td width="15%">@obj.authorName</td>
                        <td width="15%">@obj.DateTimeOfStarting</td>
                        <td width="15%">@obj.PredictedDateTimeOfClosing</td>
                        <td width="15%">@obj.status</td>
                        <td class="text-center">
                            <div class="w-65 btn-group" role="group">
                                <a asp-controller="UserTask" asp-route-Id="@obj.id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="UserTask" asp-route-Id="@obj.id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="row p-4">
            <p>No tasks exist.</p>
        </div>
    }
</div>